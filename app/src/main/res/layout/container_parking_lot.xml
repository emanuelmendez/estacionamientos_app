<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_lot_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="TextView"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button.Borderless.Colored"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/txt_lot_rate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:gravity="end"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_toEndOf="@id/txt_lot_number"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_lot_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_lot_schedule"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_lot_schedule"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_lot_rate"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="@string/no_schedule_set" />

            <Button
                android:id="@+id/btn_edit_lot"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_lot_description"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="fill_vertical|end"
                android:text="@string/btn_edit_lot"
                android:textColor="@color/colorGreen"/>

            <Button
                android:id="@+id/btn_delete_lot"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_lot_description"
                android:layout_toEndOf="@+id/btn_edit_lot"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="fill_vertical|end"
                android:text="@string/delete_lot"
                android:textColor="@color/colorAccent" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>