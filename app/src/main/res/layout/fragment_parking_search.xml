<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationDrawerActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        >
    <LinearLayout
        android:id="@+id/linearLayout_parking_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/lbl_parking_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="clip_horizontal"
            android:text="Buscar estacionamiento"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|center"
            android:orientation="vertical"
            android:padding="4dp">


            <EditText
                android:id="@+id/txt_address_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:hint="Calle, altura, ciudad"
                android:inputType="text"
                android:singleLine="true"
                android:textSize="14sp"
                tools:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/lbl_radio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:text="Seleccione radio de búsqueda"
                    android:visibility="visible" />

                <Spinner
                    android:id="@+id/spinner_radio"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_weight="1"
                    android:dropDownWidth="match_parent"
                    android:entries="@array/radio_array"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <Button
                    android:id="@+id/btn_search_start_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:text="Fecha"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    tools:background="@android:color/holo_blue_light"
                    tools:textColor="@color/common_google_signin_btn_text_dark_default" />
                <Button
                    android:id="@+id/btn_search_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="1"
                    android:text="Hora"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    tools:background="@android:color/holo_blue_light"
                    tools:textColor="@color/common_google_signin_btn_text_dark_default" />

                <TextView
                    android:id="@+id/txt_start_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center|right"
                    android:text="" />
                <TextView
                    android:id="@+id/txt_start_time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp">

                <EditText
                    android:id="@+id/txt_search_duration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="Duración"
                    android:inputType="time"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/chk_same_time_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Buscar mismo horario para más de un día" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/linearLayout_date_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">

                <Button
                    android:id="@+id/btn_search_to_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_weight="2"
                    android:text="Fecha hasta"
                    android:textAllCaps="false"
                    android:textStyle="bold"
                    tools:background="@android:color/holo_blue_light"
                    tools:textColor="@color/common_google_signin_btn_text_dark_default" />

                <TextView
                    android:id="@+id/txt_to_datetime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/weekdays"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="4dp"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/chk_monday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="L" />

                <CheckBox
                    android:id="@+id/chk_tuesday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M" />

                <CheckBox
                    android:id="@+id/chk_wednesday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="M" />

                <CheckBox
                    android:id="@+id/chk_thursday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="J" />

                <CheckBox
                    android:id="@+id/chk_friday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="V" />

                <CheckBox
                    android:id="@+id/chk_saturday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="S" />

                <CheckBox
                    android:id="@+id/chk_sunday_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="D" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="4dp"
                android:layout_weight="1"
                android:paddingLeft="6dp"
                android:paddingTop="2dp"
                android:text="Ver resultados en:"
                android:textSize="14sp" />

            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2"
                    android:checked="true"
                    android:paddingTop="4dp"
                    android:text="Mapa" />

                <RadioButton
                    android:id="@+id/radio_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="2"
                    android:paddingTop="4dp"
                    android:text="Lista" />
            </RadioGroup>

            <android.support.v4.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />
            </android.support.v4.widget.NestedScrollView>

        </LinearLayout>

        <Button
            android:id="@+id/btn_parking_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:elevation="0dp"
            android:paddingTop="6dp"
            android:text="Buscar"
            android:textAlignment="center"
            android:gravity="center"
            android:textStyle="bold"
            tools:background="@android:color/holo_green_dark"
            tools:textColor="@color/common_google_signin_btn_text_dark_default" />

    </LinearLayout>
    </ScrollView>
</FrameLayout>

